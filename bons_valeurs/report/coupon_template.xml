<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="coupon_internal_layout">
        <style>

        </style>
        <t t-if="not o" t-set="o" t-value="doc"/>

        <t t-if="not company">
            <!-- Multicompany -->
            <t t-if="company_id">
                <t t-set="company" t-value="company_id"/>
            </t>
            <t t-elif="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
            <t t-else="else">
                <t t-set="company" t-value="res_company"/>
            </t>
        </t>

<!--        <div class="article" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">-->
        <div class="article" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
          <t t-raw="0"/>
        </div>
    </template>

    <!-- Main template -->
    <template id="coupon_template">
        <t t-call="web.html_container">
            <t t-foreach="coupon_per_page" t-as="page">
<!--                <div class="page">-->
                    <t t-call="bons_valeurs.coupon_unique_print"/>
<!--                </div>-->
<!--                <t t-call="bons_valeurs.coupon_unique_print" t-lang="doc.partner_id.lang"/>-->
            </t>
        </t>
    </template>

    <!-- Translatable template -->
    <template id="coupon_unique_print">
        <t t-call="bons_valeurs.coupon_internal_layout">
            <div class="page" style="border: 1px solid blue; width:210mm; height: 297mm" >
<!--                <div class="oe_structure"/>-->
                    <t t-foreach="page" t-as="o">
<!--                        <div class="col"  style="min-width:210mm; min-height: 120mm; border: 1px solid red">-->
                        <div class="col"  style="width:210mm; border: 1px solid red">
                            <div class="row" >
                                <div id="left" class="col-6" style="border: 1px solid green">
                                    <div id="l1"><span t-field="o.sequence"/></div>
                                    <div id="l2"><span t-field="o.value"/></div>
                                    <div id="l3"></div>
                                    <div id="l4"></div>
                                    <div id="l6"><span t-field="o.barcode_trunked"/></div>
                                    <div id="l5"></div>
                                </div>
                                <div id="right" class="col-6" style="border: 1px solid green">
                                    <div class="row">
                                        <div id="r1">
                                            <div id="r1.1">
                                                <t t-if="o.partner_id">
                                                    <h2><p>Customer: <span t-field="o.partner_id"/></p></h2>
                                                </t>
                                            </div>
                                            <div id="r1.2">
                                                <img class="barcode" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;humanreadable=0' % ('Code11', o.barcode)" alt="Barcode"/>
<!--                                                <img class="barcode" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s&amp;humanreadable=0' % ('Code11', o.barcode, 600, 100)" alt="Barcode"/>-->
                                            </div>
                                            <div id="r1.3"></div>
                                            <div id="r1.4"><span t-field="o.barcode_trunked"/></div>
                                            <div id="r1.5"><span t-field="o.company_id"/></div>
                                        </div>
                                        <div id="r2" >
                                            <div id="r2.1"><span t-field="o.sequence"/></div>
                                            <div id="r2.2"><span t-field="o.value"/></div>
                                            <div id="r2.3"></div>
                                        </div>
                                    </div>

                                    <!--                            <div class="col-4" name="right_box">-->
                                    <!--                                <img class="barcode" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s&amp;humanreadable=0' % ('Code128', o.barcode, 600, 100)" alt="Barcode"/>-->
                                    <!--                            </div>-->
                                </div>
                            </div>
                        </div>
                    </t>
<!--                <div class="oe_structure"/>-->
            </div>
        </t>
    </template>

    <record id="coupon_report" model="ir.actions.report">
        <field name="name">Coupon Report</field>
        <field name="model">coupon.value</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">bons_valeurs.coupon_template</field>
        <field name="print_report_name">'Coupon Report - %s' % (object.sequence)</field>
    </record>


</odoo>